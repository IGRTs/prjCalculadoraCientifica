<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora Científica"
        android:textSize="30dp"
        android:textColor="#3434E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <LinearLayout
        android:id="@+id/div"
        android:layout_width="404dp"
        android:layout_height="468dp"
        android:background="#AFAFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54">

        <LinearLayout
            android:id="@+id/divResposta"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="#CAD9FF"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblRes"
                android:layout_width="366dp"
                android:layout_height="39dp"
                android:background="#6A00FF"
                android:gravity="right"
                android:text="0"
                android:textSize="30dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/divbtn1"
            android:layout_width="match_parent"
            android:layout_height="73dp"

            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="7"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="9"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="/"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn17"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="C"
                android:textSize="25dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/divbtn2"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="5"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="6"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="x"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnRaiz"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="√"
                android:layout_marginLeft="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/divbtn3"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="3"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="-"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnPot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="X²"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/divbtn4"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text=","
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn15"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="+"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnCos"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Cos"
                android:layout_marginLeft="5dp"
                android:textSize="7dp"/>

            <Button
                android:id="@+id/btnSen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Sen"
                android:textSize="7dp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/btn16"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="="
                android:textSize="25dp" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>